{
	"name": "@skeletonlabs/skeleton",
	"version": "0.80.9",
	"description": "A SvelteKit component library.",
	"author": "endigo9740 <chris@skeletonlabs.dev>",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"package": "node ./scripts/pre-build.js && svelte-kit sync && svelte-package && node ./scripts/post-build.js",
		"publish": "npm publish ./package",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .prettierignore --check --plugin-search-dir=. . && eslint --fix --ignore-path .gitignore .",
		"format": "prettier --ignore-path .prettierignore --write --plugin-search-dir=. .",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"transpile:bases": "postcss src/lib/tailwind/bases.css --config postcss.config.cjs --dir .temp --base src/lib/tailwind",
		"transpile:utilities": "postcss src/lib/tailwind/utilities.css --config postcss.config.cjs --dir .temp --base src/lib/tailwind",
		"transpile:components": "postcss src/lib/tailwind/components.css --config src/lib/tailwind/postcss.config.cjs --dir .temp --base src/lib/tailwind",
		"transpile:all": "postcss src/lib/styles/all.css --dir .temp --base src/lib/styles",
		"convert:bases": "prejss-cli .temp/bases.css --format commonjs",
		"convert:components": "prejss-cli .temp/components.css --format commonjs",
		"convert:utilities": "prejss-cli .temp/utilities.css --format commonjs",
		"bases": "npm run transpile:bases && npm run convert:bases && cp .temp/bases.js src/lib/tailwind/generated/bases.cjs",
		"utilities": "npm run transpile:utilities && npm run convert:utilities && cp .temp/utilities.js src/lib/tailwind/generated/utilities.cjs",
		"components": "npm run transpile:components && npm run convert:components && cp .temp/components.js src/lib/tailwind/generated/components.cjs",
		"build:styles": "npm run clean:all && npm run utilities && npm run bases && npm run components",
		"clean:all": "rm -rf .temp",
		"clean:jss": "rm -rf src/lib/tainwind/generated",
		"prebuild:all": "npm run clean:all && postcss src/lib/styles/all.css --dir .temp --base src/lib/styles",
		"build:all": "prejss-cli .temp/all.css --format commonjs",
		"postbuild:all": "mkdir -p src/lib/tailwind/generated && mv -f .temp/all.js src/lib/tailwind/generated/allComponents.cjs"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/kit": "^1.0.0",
		"@sveltejs/package": "1.0.0",
		"@tailwindcss/forms": "^0.5.3",
		"@testing-library/dom": "^8.19.0",
		"@testing-library/svelte": "^3.2.2",
		"@typescript-eslint/eslint-plugin": "^5.46.1",
		"@typescript-eslint/parser": "^5.46.1",
		"autoprefixer": "^10.4.13",
		"c8": "^7.12.0",
		"edit-package-json": "^0.8.2",
		"eslint": "^8.29.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"highlight.js": "^11.7.0",
		"jsdom": "^20.0.3",
		"postcss-cli": "^10.1.0",
		"postcss-import": "^15.0.1",
		"postcss-js": "^4.0.0",
		"prejss-cli": "^0.3.3",
		"postcss": "^8.4.20",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.1",
		"prettier-plugin-svelte": "^2.9.0",
		"sveld": "^0.18.0",
		"svelte": "^3.55.0",
		"svelte-check": "^2.10.2",
		"svelte-preprocess": "^5.0.0",
		"svelte2tsx": "^0.5.22",
		"tailwindcss": "^3.2.4",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.1",
		"vite-plugin-sveld": "^1.1.0",
		"vitest": "^0.25.8"
	},
	"type": "module",
	"types": "index.d.ts",
	"exports": {
		".": "./src/lib/index.ts",
		"./themes/*": "./src/lib/themes/*",
		"./styles/*": "./src/lib/styles/*",
		"./tailwind/*": "./src/lib/tailwind/*"
	}
}
