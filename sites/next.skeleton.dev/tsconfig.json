{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "moduleResolution": "Bundler",
        "paths": {
            "@lib/*": ["src/lib/*"],
            "@layouts/*": ["src/layouts/*"],
            "@components/*": ["src/components/*"],
            "@examples/*": ["src/examples/*"],
            "@content/*": ["src/content/*"],
            "@styles/*": ["src/styles/*"],
        },
        // "strictNullChecks": true,
    },
}
