---
import LayoutDocs from "@lib/layouts/LayoutDocs.astro";

const layoutProps = {
    categoryId: 1,
    title: 'Dividers',
    description: 'Horizontal and vertical rule styling.'
};
---

<LayoutDocs {...layoutProps}>
    <!-- Preview -->
    <Fragment slot="preview">
        <div class="w-full space-y-4">
            <p class="type-scale-1 opacity-60">Default</p>
            <hr class="hr" />
            <p class="type-scale-1 opacity-60">border-t-2</p>
            <hr class="hr border-t-2" />
            <p class="type-scale-1 opacity-60">border-t-4</p>
            <hr class="hr border-t-4" />
            <p class="type-scale-1 opacity-60">border-t-8</p>
            <hr class="hr border-t-8" />
        </div>
    </Fragment>
    <!-- Vertical -->
    <section class="space-y-4">
        <h2 class="h2">Vertical</h2>
        <div class="docs-card-outlined-centered p-8">
            <div class="h-20 grid grid-cols-[1fr_auto_auto_auto_auto_1fr] items-center gap-4">
                <p class="type-scale-1 opacity-60">Default &rarr;</p>
                <span class="vr" />
                <span class="vr border-l-2" />
                <span class="vr border-l-4" />
                <span class="vr border-l-8" />
                <p class="type-scale-1 opacity-60">&larr; border-l-8</p>
            </div>
        </div>
    </section>
</LayoutDocs>
