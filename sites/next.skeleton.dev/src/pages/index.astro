---
import { Icon } from 'astro-icon/components';

import LayoutRoot from '@layouts/LayoutRoot.astro';
import Header from '@components/docs/Header.astro';

const layoutProps = {
	classList: 'space-y-10',
};
---

<LayoutRoot {...layoutProps}>
	<!-- Header -->
	<Header />

	<!-- Main -->
	<main class="container mx-auto space-y-10 px-4">
		<!-- Warning -->
		<div class="card p-8 py-6 preset-tonal-primary grid grid-cols-1 lg:grid-cols-[1fr_auto] items-center gap-4">
			<div class="space-y-2">
				<p class="type-scale-5 font-bold">Early Preview</p>
				<p>
					This website represents and early preview of Skeleton Next (v3). Please be aware that features may
					be missing, incomplete, or non-functional at this time.
				</p>
			</div>
			<div class="flex flex-col gap-2">
				<a
					class="btn preset-filled"
					href="https://github.com/skeletonlabs/skeleton/discussions/2375"
					target="_blank">Learn More</a
				>
			</div>
		</div>
		<!-- Page Header -->
		<section class="mx-auto flex flex-col justify-center gap-4 text-center">
			<Icon name="skeleton" size={128} class="mx-auto" />
			<h1 class="h1">Welcome to Skeleton.</h1>
			<p class="max-w-[800px] mx-auto opacity-60 type-scale-4 text-balance">
				Skeleton provides a robust design system that gives Tailwind superpowers. It is framework agnostic,
				extremely customizable, and completely open source.
			</p>
			<nav class="flex justify-center gap-4">
				<a href="/docs/introduction" class="btn preset-filled">Get Started</a>
				<a
					href=" https://github.com/skeletonlabs/skeleton"
					target="_blank"
					class="btn preset-outlined-surface-200-800 hover:preset-tonal">GitHub</a
				>
			</nav>
		</section>
	</main>
</LayoutRoot>
