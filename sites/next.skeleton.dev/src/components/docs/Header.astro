---
import { Icon } from 'astro-icon/components'

const socialLinks = [
    { href: 'https://github.com/skeletonlabs/skeleton', label: 'GitHub', icon: 'github' },
    { href: 'https://discord.gg/EXqV7W8MtY', label: 'Discord', icon: 'discord' },
]
---

<header class="w-full border-b border-surface-200-800 bg-surface-50-950 p-4 md:px-10">
    <div class="container mx-auto flex max-w-screen-2xl justify-between items-center">
        <a class="type-scale-3 flex gap-3" href="/" title="Skeleton">
            <span><Icon name="skeleton" size={24} /></span>
            <span class="font-bold font-mono">skeleton</span>
        </a>
        <nav class="type-scale-1 flex items-center gap-4">
            <!-- Social -->
            {
                socialLinks.map((l) => (
                    <a href={l.href} target="_blank" title={l.label}>
                        <Icon name={l.icon} size={24} class="size-5" />
                    </a>
                ))
            }
            <!-- Lightswitch -->
            <button id="lightswitch" title="Toggle dark mode.">
                <i data-lucide="sun-moon" class="size-5"></i>
            </button>
        </nav>
    </div>
</header>

<!-- Lighswitch Script -->
<!-- TODO: move to dedidcated component -->
<script>
    const elemHtmlTag = document.querySelector('html')
    const elemLightswitch = document.querySelector('#lightswitch')
    elemLightswitch?.addEventListener('click', () => {
        elemHtmlTag?.classList.toggle('dark')
    })
</script>
