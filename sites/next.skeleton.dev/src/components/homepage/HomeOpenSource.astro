---
import { ChevronRight as IconChevron } from 'lucide-react';
---

<div class="grid grid-cols-1 xl:grid-cols-[2fr_1fr] gap-10">
	<!-- Grid -->
	<div class="grid grid-cols-10 md:grid-cols-[repeat(20,minmax(0,1fr))] gap-2">
		{
			Array.from(Array(196)).map((a) => {
				return (
					<div class="preset-tonal w-full aspect-square rounded-full flex justify-center items-center">
						<span class="text-xs">A</span>
					</div>
				);
			})
		}
	</div>
	<!-- Text -->
	<div class="space-y-4">
		<div class="space-y-2">
			<h2 class="h2 text-balance">Open Source</h2>
			<p class="opacity-60">
				Lorem ipsum, dolor sit amet consectetur adipisicing elit. Quae doloribus quaerat placeat optio fuga est incidunt.
			</p>
		</div>
		<nav class="flex gap-4">
			<a href="/" class="btn preset-filled">
				<span>View on GitHub</span>
				<IconChevron className="size-4" />
			</a>
			<a href="/" class="btn preset-outlined-surface-400-600 hover:preset-tonal">
				<span>How to Contribute</span>
			</a>
		</nav>
	</div>
</div>
