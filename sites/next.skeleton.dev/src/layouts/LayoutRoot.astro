---
import '@styles/app.css'

interface Props {
    title?: string
    classList?: string
}

const { title, classList } = Astro.props satisfies Props

const pageTitle = `${title ? title + ' - ' : ''}Skeleton`
---

<!doctype html>
<html lang="en" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
        <!-- Lucide -->
        <!-- https://lucide.dev/guide/packages/lucide#with-esmodules -->
        <!-- NOTE: maintain alphabetic order -->
        <script>
            import {
                createIcons,
                // Icons
                BookOpen,
                Check,
                CircleDollarSign,
                Code,
                Heart,
                PersonStanding,
                Search,
                SunMoon,
            } from 'lucide'
            createIcons({
                icons: {
                    BookOpen,
                    Check,
                    CircleDollarSign,
                    Code,
                    Heart,
                    PersonStanding,
                    Search,
                    SunMoon,
                },
            })
        </script>
    </head>
    <body class:list={[classList]} data-theme="next">
        <slot />
    </body>
</html>
