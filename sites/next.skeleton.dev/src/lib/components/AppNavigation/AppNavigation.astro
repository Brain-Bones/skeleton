---
interface Props {
  classList?: string;
}

const {
  classList
} = Astro.props;

const linksDocs = [
    {href: '/docs/introduction', label: 'Introduction'},
];
const linksTailwind = [
    {href: '/tailwind/buttons', label: 'Buttons'},
];
const linksComponents = [
    {href: '/components/accordions', label: 'Accordions'},
];
---

<aside class="p-10 overflow-y-auto space-y-10 text-sm" class:list={[classList]}>
    <!-- Top -->
    <div class="flex flex-col gap-3">
        <span class="font-bold">Docs</span>
        {linksDocs.map(l => <a class="anchor" href={l.href}>{l.label}</a>)}
    </div>
    <!-- Tailwind -->
    <div class="flex flex-col gap-3">
        <span class="font-bold">Tailwind</span>
        {linksTailwind.map(l => <a class="anchor" href={l.href}>{l.label}</a>)}
    </div>
    <!-- Components -->
    <div class="flex flex-col gap-3">
        <span class="font-bold">Components</span>
        {linksComponents.map(l => <a class="anchor" href={l.href}>{l.label}</a>)}
    </div>
    <!-- DEBUG: Use this to test with lots of links -->
    <!-- <div class="flex flex-col gap-3">
        <span class="font-bold">Test</span>
        {Array(100).fill('').map(l => <a class="anchor" href="#">Test Link</a>)}
    </div> -->
</aside>