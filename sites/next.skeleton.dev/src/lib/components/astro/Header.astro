---
const linksResources = [
    { href: 'https://github.com/skeletonlabs/skeleton', label: 'GitHub' },
    { href: 'https://discord.gg/EXqV7W8MtY', label: 'Discord' },
]
---

<header class="w-full border-b border-surface-200-800 bg-surface-50-950 p-4 md:px-10">
    <div class="container mx-auto flex max-w-screen-2xl justify-between items-center">
        <a class="type-scale-3 font-bold" href="/">Skeleton</a>
        <nav class="type-scale-1 flex items-center gap-4">
            {
                linksResources.map((l) => (
                    <a class="" href={l.href} target="_blank">
                        {l.label}
                    </a>
                ))
            }
            <button id="lightswitch" class="btn btn-sm preset-outlined-surface-200-800" title="Toggle dark mode.">M</button>
        </nav>
    </div>
</header>

<!-- Lightmode Script -->
<script>
    const elemHtmlTag = document.querySelector('html')
    const elemLightswitch = document.querySelector('#lightswitch')
    elemLightswitch?.addEventListener('click', () => {
        elemHtmlTag?.classList.toggle('dark')
    })
</script>
