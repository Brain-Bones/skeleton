/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

html,
body {
	@apply h-full overflow-hidden;
}

/* Typography --- */

.text-soft {
	@apply type-scale-1 opacity-60;
}
.label-text {
	@apply text-soft mb-2;
}

/* Utility Classes */

.scrollbar-gutter-stable {
	scrollbar-gutter: stable;
}
