{
  "name": "create-skeleton-app",
  "version": "0.0.46-beta.2",
  "description": "Use this CLI app to setup a new Skeleton application in a new SvelteKit project.",
  "keywords": [
    "skeleton",
    "svelte",
    "sveltekit",
    "svelte-kit"
  ],
  "homepage": "https://www.skeleton.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/skeletonlabs/skeleton",
    "directory": "packages/create-skeleton-app/"
  },
  "license": "MIT",
  "author": "Skeleton Admin <admin@skeletonlabs.co>",
  "type": "module",
  "main": "./src/index.js",
  "bin": "./src/index.js",
  "files": [
    "src/**",
    "templates/**"
  ],
  "engines": {
    "node": ">=14.16"
  },
  "scripts": {
    "prep": "node scripts/prepare-templates.mjs",
    "dev": "node src/index.js -p=../../../atest --skeletontemplatedir=../../templates/skeleton-template-portfolio",
    "long": "node src/index.js --types=typescript --prettier --eslint --playwright=false --vitest=false --codeblocks=true --popups=true --typography=false --forms=false -t crimson --skeletontemplate=welcome",
    "pub:beta": "node scripts/prepare-templates.mjs && npm publish --tag beta",
    "pub:next": "node scripts/prepare-templates.mjs && npm publish --tag next",
    "pub:release": "node scripts/prepare-templates.mjs && npm publish",
    "release": "node scripts/prepare-templates.mjs && npm publish",
    "lint": "prettier --ignore-path .prettierignore --check --plugin-search-dir=. . && eslint --fix --ignore-path .gitignore .",
    "format": "prettier --plugin-search-dir . --write .",
    "test": "node tests/create-all.mjs --experimental-fetch"
  },
  "dependencies": {
    "@clack/prompts": "^0.6.3",
    "columnify": "^1.6.0",
    "create-svelte": "^4.2.0",
    "fast-glob": "^3.3.0",
    "fs-extra": "^11.1.1",
    "got": "^13.0.0",
    "kleur": "^4.1.5",
    "mri": "^1.2.0",
    "semver": "^7.5.2"
  },
  "devDependencies": {
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "zip-a-folder": "^2.0.0"
  }
}
