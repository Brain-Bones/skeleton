{
	"name": "@skeletonlabs/skeleton-react",
	"version": "1.0.0-next.3",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"check": "pnpm package",
		"package": "tsc --project tsconfig.package.json",
		"package:watch": "tsc --project tsconfig.package.json --watch --preserveWatchOutput",
		"preview": "vite preview",
		"test": "pnpm run \"/test:/\"",
		"test:unit": "vitest",
		"schema": "node ./scripts/generator.js"
	},
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./schemas": "./src/lib/schemas.ts"
	},
	"typesVersions": {
		">4.0": {
			"index.d.ts": [
				"./dist/index.d.ts"
			]
		}
	},
	"files": [
		"./dist/**/*.js",
		"./dist/**/*.map",
		"./dist/**/*.d.ts",
		"./dist/**/*.cjs",
		"./dist/**/*.d.cts",
		"!./dist/**/*.test.*",
		"!./dist/**/schema.json",
		"!./dist/schemas.js",
		"!./dist/schemas.d.ts"
	],
	"dependencies": {
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@skeletonlabs/skeleton": "workspace:*",
		"@tailwindcss/forms": "^0.5.7",
		"@testing-library/jest-dom": "^6.4.7",
		"@testing-library/react": "^14.3.1",
		"@testing-library/user-event": "^14.5.2",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react": "^4.3.1",
		"@zag-js/accordion": "^0.64.0",
		"@zag-js/avatar": "^0.64.0",
		"@zag-js/progress": "^0.64.0",
		"@zag-js/radio-group": "^0.64.0",
		"@zag-js/rating-group": "^0.64.0",
		"@zag-js/react": "^0.64.0",
		"@zag-js/switch": "^0.64.0",
		"autoprefixer": "^10.4.19",
		"jsdom": "^24.1.1",
		"lucide-react": "^0.341.0",
		"postcss": "^8.4.39",
		"react-router-dom": "^6.25.1",
		"tailwindcss": "^3.4.6",
		"typescript": "^5.5.3",
		"typescript-json-schema": "^0.63.0",
		"vite": "^5.3.4",
		"vite-plugin-remix-router": "^2.0.0",
		"vite-plugin-tw-plugin-watcher": "workspace:*",
		"vitest": "^1.6.0"
	},
	"peerDependencies": {
		"framer-motion": "^11.0.24"
	}
}
