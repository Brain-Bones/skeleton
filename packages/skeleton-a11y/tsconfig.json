{
	"compilerOptions": {
		"outDir": "dist",
		"module": "node16",
		"target": "es2023",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"declaration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",
		"verbatimModuleSyntax": true,
		"isolatedModules": true
	},
	"include": ["src"],
	"exclude": ["./**/*.test.ts"]
}
